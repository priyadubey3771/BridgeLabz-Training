// create database
  Create Database employee_db;
  
// use employee database
 USE employee_db;
 
 // select database
  SELECT Database();
+-------------+
| Database()  |
+-------------+
| employee_db |
+-------------+

// create employee table
CREATE TABLE employees( emp_id INT AUTO_INCREMENT PRIMARY KEY, name VARCHAR(100) NOT NULL, department VARCHAR(50), salary DECIMAL(10,2));

// show employee table
 DESC employees;
+------------+---------------+------+-----+---------+----------------+
| Field      | Type          | Null | Key | Default | Extra          |
+------------+---------------+------+-----+---------+----------------+
| emp_id     | int           | NO   | PRI | NULL    | auto_increment |
| name       | varchar(100)  | NO   |     | NULL    |                |
| department | varchar(50)   | YES  |     | NULL    |                |
| salary     | decimal(10,2) | YES  |     | NULL    |                |
+------------+---------------+------+-----+---------+----------------+

